{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ],
    },
    "types": [
      "vitest/globals"
    ],
  }
}
